{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": false,
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/pages/planner",
        "destination": "/pages/planner.html"
      },
      {
        "source": "/pages/notes",
        "destination": "/pages/notes.html"
      },
      {
        "source": "/pages/flashcards",
        "destination": "/pages/flashcards.html"
      },
      {
        "source": "/pages/profile",
        "destination": "/pages/profile.html"
      },
      {
        "source": "/pages/timer",
        "destination": "/pages/timer.html"
      },
      {
        "source": "/pages/progress",
        "destination": "/pages/progress.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
